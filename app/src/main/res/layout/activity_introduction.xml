<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical">

    <include layout="@layout/tool_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.youth.banner.Banner
                    android:id="@+id/bannerIntroduction"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"></com.youth.banner.Banner>

                <TextView
                    android:id="@+id/textIntroductionName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/bg_black"
                    android:gravity="center_vertical"
                    android:layout_gravity="bottom"
                    android:maxLines="1"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    tools:text="广州机电职业技术学院" />
            </FrameLayout>


            <TextView
                android:id="@+id/textSchoolIntroduction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/textColor"
                android:padding="16dp"
                android:textSize="14sp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>