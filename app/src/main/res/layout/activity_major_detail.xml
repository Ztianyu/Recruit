<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical">

    <include layout="@layout/tool_bar" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/view_major_detail_header" />

            <View
                android:layout_width="match_parent"
                android:layout_height="16dp"></View>

            <include layout="@layout/view_major_detail_introduction" />

            <View
                android:layout_width="match_parent"
                android:layout_height="16dp"></View>

            <include layout="@layout/view_major_detail_fun" />

            <View
                android:layout_width="match_parent"
                android:layout_height="32dp"></View>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>