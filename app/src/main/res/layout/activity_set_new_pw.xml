<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/tool_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/loginHeight"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:layout_marginTop="16dp">

                <EditText
                    android:id="@+id/editRegisterPw"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:drawableLeft="@drawable/login_pw_tip"
                    android:drawablePadding="8dp"
                    android:hint="请输入密码"
                    android:inputType="textPassword"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:textColor="@color/textColor"
                    android:textColorHint="@color/gray"
                    android:textCursorDrawable="@null"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/textRegisterPwTip"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/diverHeight"
                    android:layout_alignParentBottom="true"
                    android:background="@color/colorDiver" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/loginHeight"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:layout_marginTop="16dp">

                <EditText
                    android:id="@+id/editRegisterSurePw"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:drawableLeft="@drawable/login_pw_tip"
                    android:drawablePadding="8dp"
                    android:hint="请确认密码"
                    android:inputType="textPassword"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:textColor="@color/textColor"
                    android:textColorHint="@color/gray"
                    android:textCursorDrawable="@null"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/textRegisterSurePwTip"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/diverHeight"
                    android:layout_alignParentBottom="true"
                    android:background="@color/colorDiver" />
            </RelativeLayout>

            <TextView
                android:id="@+id/btnRegister"
                android:layout_width="match_parent"
                android:layout_height="@dimen/loginHeight"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:layout_marginTop="16dp"
                android:background="@color/colorAccent"
                android:gravity="center"
                android:text="确认修改"
                android:textColor="@color/white"
                android:textSize="16sp" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>


