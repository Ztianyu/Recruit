<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutJobHeader"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:descendantFocusability="blocksDescendants"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="8dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="8dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingRight="4dp">

        <TextView
            android:id="@+id/textComName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textColor"
            android:textSize="15sp"
            tools:text="公司名称" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textComNature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/ic_com_nature"
                android:drawablePadding="4dp"
                android:textColor="@color/gray2"
                android:textSize="14sp"
                android:gravity="center_vertical"
                tools:text="中外合资" />

            <TextView
                android:id="@+id/textComScale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:drawableLeft="@mipmap/ic_com_scale"
                android:drawablePadding="4dp"
                android:textColor="@color/gray2"
                android:gravity="center_vertical"
                android:textSize="14sp"
                tools:text="50-100人" />

            <TextView
                android:id="@+id/textIndustry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:drawableLeft="@mipmap/ic_com_industry"
                android:drawablePadding="4dp"
                android:singleLine="true"
                android:gravity="center_vertical"
                android:textColor="@color/gray2"
                android:textSize="14sp"
                tools:text="计算机软件" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_expand_normal" />
</LinearLayout>