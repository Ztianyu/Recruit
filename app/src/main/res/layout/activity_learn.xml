<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/fragmentLearnContent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"></FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorDiver"></View>

    <cn.zty.baselib.widget.BottomNavigationViewEx
        android:id="@+id/learnNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:elevation="0dp"
        android:background="@android:color/white"
        app:itemTextColor="@drawable/bottom_color"
        app:menu="@menu/learn_navigation"></cn.zty.baselib.widget.BottomNavigationViewEx>

</LinearLayout>