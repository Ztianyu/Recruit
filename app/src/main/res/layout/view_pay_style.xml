<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginLeft="16dp"
        android:gravity="center_vertical"
        android:text="请选择支付方式"
        android:textColor="@color/textColor"
        android:textSize="15sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorDiver"></View>

    <cn.zty.baselib.widget.StripMenuView
        android:id="@+id/payAli"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:imgSrc="@mipmap/ic_pay_ali"
        app:isHasBottomLine="false"
        app:isHasTopLine="false"
        app:lineMargin="16"
        app:textName="支付宝"
        app:textNameColor="@color/textColor"></cn.zty.baselib.widget.StripMenuView>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorDiver"></View>

    <cn.zty.baselib.widget.StripMenuView
        android:id="@+id/payWeChat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:imgSrc="@mipmap/ic_pay_we_chat"
        app:isHasBottomLine="false"
        app:isHasTopLine="false"
        app:lineMargin="16"
        app:textName="微 信"
        app:textNameColor="@color/textColor"></cn.zty.baselib.widget.StripMenuView>

</LinearLayout>